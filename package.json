{
  "name": "isolate-components",
  "version": "0.2.0",
  "repository": "https://github.com/davidmfoley/isolate-components",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "davidmfoley@gmail.com",
  "license": "MIT",
  "private": false,
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "docs": "yarn docs:typedoc && yarn docs:gh-pages",
    "docs:typedoc": "typedoc --options typedoc.json src/index.ts ",
    "docs:gh-pages": "echo 'this file forces gh pages to allow access to underscore-named files' > docs/.nojekyll",
    "clean": "rm -rf ./lib/",
    "test": "mocha",
    "test:watch": "nodemon -q -e ts,tsx --exec \"yarn test\" --watch src --watch test",
    "prettier": "prettier -c '{src,test}/**/*.ts'",
    "prepublish": "yarn clean && yarn build",
    "fix:prettier": "prettier --write '{src,test}/**/*.ts'",
    "cover": "COVERAGE=1 nyc mocha && open coverage/index.html",
    "ci": "yarn build && yarn test && yarn prettier"
  },
  "dependencies": {
    "isolate-hooks": "^1.1.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "source-map-support": "^0.5.19",
    "ts-mocha": "^7.0.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.17.0-3",
    "typescript": "^4.0.3"
  },
  "mocha": {
    "extension": [
      "ts",
      "tsx"
    ],
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "watch-files": [
      "./src/**/*",
      "./test/**/*"
    ],
    "reporter": "dot"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
